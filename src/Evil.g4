grammar Evil;

prog: SEJA;
SEJA: 'seja' ;
SE: 'se' ;
SENAO: 'senao' | 'sn' ;
ENQUANTO: 'enquanto' | 'enqto' ;
PCADA: 'pcada' ;
ATR: '=' ;
NUM: '-'? ('0' | [1-9]('_'?[0-9])*)('.'[0-9]('_'?[0-9])*)? ;
OPARIT: [+\-*/%] | '//' | '**' ;
OPREL: ('>'|'<')'='? | ('!' | '=')'=' ;
OPBIN: '&' | '|' | '^' ;
OPBOOL: '&&' | '||' | '->' ;
ATRARIT: OPARIT '=' ;
OPACC: '.' ;
ID: [a-zA-Z_][a-zA-Z_0-9]* ;
STRING: '"' ([^"] | '\\"' | .)*? '"' ;
COM: '#' .*? [\n] ;
EM: 'em' ;
FN: 'fn' ;
VIRG: ',' ;
DP: ':' ;
FL: ';' ;
AP: '(' ;
FP: ')' ;
ACH: '{' ;
FCH: '}' ;
ACO: '[' ;
FCO: ']' ;
WS: [ \r\t\n]+ -> skip;
